<div class="col-12 col-md-6 col-lg-4">
    <div class="room-card h-100 d-flex flex-column border position-relative border-secondary rounded-4 overflow-hidden">
        <div class="action-container">
            @if (HasPassword)
            {
                <span class="lock-icon" title="Sala Privada">🔒</span>
            }
            @if (IsUserOwner)
            {
                <button class="btn-delete-action" @onclick="HandleDelete" @onclick:stopPropagation="true" title="Eliminar Sala">
                    <i class="btn-close btn-close-white" style="font-size: 0.8rem;"></i>
                </button>
            }
        </div>
        <div class="card-body p-4 bg-surface text-white">
            <div class=" mb-3">
                <h4 class="fw-bold mb-0 text-truncate" style="max-width: 85%;">@RoomName</h4>
            </div>

            <div class="d-flex align-items-center mb-4">
                <div class="flex-shrink-0 me-2">
                    <UserAvatar DisplayName="@OwnerName" Size="22" />
                </div>
                <p class=" text-muted small mb-0 fw-bold">
                    <span class="text-white">Host: </span> <span class="fw-bold text-white">@OwnerName</span>
                </p>
            </div>

            <div class="d-flex gap-2 fw-bold">
                <span class="badge-custom">🎬 @VideoCount vídeos</span>
                <span class="badge-custom">👥 @GetUserCountText()</span>
            </div>
        </div>
        <div class="p-4 pt-0 bg-surface">
            <button class="btn btn-primary w-100 py-2 fw-bold text-uppercase" @onclick="OnJoin">
                Entrar na Sala
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public string RoomName { get; set; } = "";
    [Parameter] public string OwnerName { get; set; } = "";
    [Parameter] public int VideoCount { get; set; }
    [Parameter] public bool HasPassword { get; set; }
    [Parameter] public EventCallback OnJoin { get; set; }
    [Parameter] public EventCallback<string> OnDelete { get; set; }
    [Parameter] public string Hash { get; set; } = "";
    [Parameter] public bool IsUserOwner { get; set; }
    [Parameter] public int UserCount { get; set; }
    private async Task HandleDelete()
    {
        await OnDelete.InvokeAsync();
    }

    private string GetUserCountText()
    {
        return UserCount == 0 ? "0 usuários" : $"{UserCount} usuários";
    }
}