<div class="col-12 col-md-6 col-lg-4">
    <div class="room-card h-100 d-flex flex-column border border-secondary rounded-4 overflow-hidden">
        <div class="card-body p-4 bg-surface text-white">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <h4 class="fw-bold mb-0 text-truncate" style="max-width: 85%;">@RoomName</h4>
                @if (HasPassword)
                {
                    <span class="text-warning" title="Sala Privada">🔒</span>
                }
            </div>

            <div class="d-flex align-items-center mb-4">
                <div class="flex-shrink-0 me-2">
                    <div class="rounded-circle bg-primary" style="width: 8px; height: 8px;"></div>
                </div>
                <p class=" text-muted small mb-0 fw-bold">
                    <span class="text-white">Host: </span> <span class="fw-bold text-white">@OwnerName</span>
                </p>
            </div>

            <div class="d-flex gap-2 fw-bold">
                <span class="badge-custom">🎬 @VideoCount vídeos</span>
                <span class="badge-custom">👥 Ativa</span>
            </div>
        </div>
        <div class="p-4 pt-0 bg-surface">
            <button class="btn btn-primary w-100 py-2 fw-bold text-uppercase" @onclick="OnJoin">
                Entrar na Sala
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public string RoomName { get; set; } = "";
    [Parameter] public string OwnerName { get; set; } = "";
    [Parameter] public int VideoCount { get; set; }
    [Parameter] public bool HasPassword { get; set; }
    [Parameter] public EventCallback OnJoin { get; set; }
}