
<div class="controls-pill shadow-lg d-flex align-items-center px-4 py-2">
    <div class="d-flex align-items-center gap-3 me-4">
        <button class="btn-icon-secondary" @onclick="OnPrevious" title="Anterior">
            <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
                <path d="M4 4a.5.5 0 0 1 1 0v3.248l6.267-3.636c.54-.313 1.232.066 1.232.696v7.384c0 .63-.692 1.01-1.232.697L5 8.753V12a.5.5 0 0 1-1 0V4z" />
            </svg>
        </button>

        <div class="play-button-wrapper">
            @if (IsPlaying)
            {
                <button class="btn-play-pause pause-glow" @onclick="OnPause" title="Pausar">
                    <svg width="24" height="24" viewBox="0 0 16 16" fill="currentColor">
                        <path d="M5.5 3.5A1.5 1.5 0 0 1 7 5v6a1.5 1.5 0 0 1-3 0V5a1.5 1.5 0 0 1 1.5-1.5zm5 0A1.5 1.5 0 0 1 12 5v6a1.5 1.5 0 0 1-3 0V5a1.5 1.5 0 0 1 1.5-1.5z" />
                    </svg>
                </button>
            }
            else
            {
                <button class="btn-play-pause play-glow" @onclick="OnPlay" title="Reproduzir">
                    <svg width="24" height="24" viewBox="0 0 16 16" fill="currentColor" style="margin-left: 3px;">
                        <path d="m11.596 8.697-6.363 3.692c-.54.313-1.233-.066-1.233-.697V4.308c0-.63.692-1.01 1.233-.696l6.363 3.692a.802.802 0 0 1 0 1.393z" />
                    </svg>
                </button>
            }
        </div>

        <button class="btn-icon-secondary" @onclick="OnNext" title="Próximo">
            <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
                <path d="M12.5 4a.5.5 0 0 0-1 0v3.248L5.233 3.612C4.693 3.3 4 3.678 4 4.308v7.384c0 .63.692 1.01 1.233.697L11.5 8.753V12a.5.5 0 0 0 1 0V4z" />
            </svg>
        </button>
    </div>

    <div class="v-divider"></div>

    <div class="d-flex align-items-center gap-3 ms-4">
        <button class="btn-icon-secondary p-0" @onclick="OnToggleMute">
            @if (IsMuted || Volume == 0)
            {
                <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
                    <path d="M6.717 3.55A.5.5 0 0 1 7 4v8a.5.5 0 0 1-.812.39L3.825 10.5H1.5A.5.5 0 0 1 1 10V6a.5.5 0 0 1 .5-.5h2.325l2.363-1.89a.5.5 0 0 1 .529-.06zm7.137 2.096a.5.5 0 0 1 0 .708L12.207 8l1.647 1.646a.5.5 0 0 1-.708.708L11.5 8.707l-1.646 1.647a.5.5 0 0 1-.708-.708L10.793 8 9.146 6.354a.5.5 0 1 1 .708-.708L11.5 7.293l1.646-1.647a.5.5 0 0 1 .708 0z" />
                </svg>
            }
            else
            {
                <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
                    <path d="M11.536 14.01A8.473 8.473 0 0 0 14.026 8a8.473 8.473 0 0 0-2.49-6.01l-.708.707A7.476 7.476 0 0 1 13.025 8c0 2.071-.84 3.946-2.197 5.303l.708.707z" />
                    <path d="M10.121 12.596A6.48 6.48 0 0 0 12.025 8a6.48 6.48 0 0 0-1.904-4.596l-.707.707A5.483 5.483 0 0 1 11.025 8a5.483 5.483 0 0 1-1.61 3.89l.706.706z" />
                    <path d="M8.707 11.182A4.486 4.486 0 0 0 10.025 8a4.486 4.486 0 0 0-1.318-3.182l-.707.707A3.489 3.489 0 0 1 9.025 8a3.489 3.489 0 0 1-1.025 2.475l.707.707zM6.717 3.55A.5.5 0 0 1 7 4v8a.5.5 0 0 1-.812.39L3.825 10.5H1.5A.5.5 0 0 1 1 10V6a.5.5 0 0 1 .5-.5h2.325l2.363-1.89a.5.5 0 0 1 .529-.06z" />
                </svg>
            }
        </button>

        <div class="volume-slider-container">
            <div class="volume-track">
                <div class="volume-fill" style="width: @(Volume)%"></div>
            </div>
            <input type="range" min="0" max="100" value="@Volume"
                   @oninput="HandleVolumeInput" class="volume-input" />
        </div>

        <span class="volume-label">@Volume%</span>
    </div>
</div>

@code {
    [Parameter] public bool IsPlaying { get; set; }
    [Parameter] public int Volume { get; set; }
    [Parameter] public bool IsMuted { get; set; }

    [Parameter] public EventCallback OnPlay { get; set; }
    [Parameter] public EventCallback OnPause { get; set; }
    [Parameter] public EventCallback OnNext { get; set; }
    [Parameter] public EventCallback OnPrevious { get; set; }
    [Parameter] public EventCallback OnToggleMute { get; set; }
    [Parameter] public EventCallback<int> OnVolumeChanged { get; set; }

    private async Task HandleVolumeInput(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out var volume))
        {
            await OnVolumeChanged.InvokeAsync(volume);
        }
    }
}